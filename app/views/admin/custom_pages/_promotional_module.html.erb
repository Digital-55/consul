              <%= image_tag f.object.promo_image_three.url(:thumb) %>
            </div>
            <small>
              <%= f.object.promo_image_three.instance.promo_image_three_file_name %>
            </small>
          <% end %>
        </div>
        <div class="ckeditor small-12 medium-12 column">
          <%= f.cktext_area :promo_description_three,
                            id: "promo_description_three_#{f.object.id}",
                            label: t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_description_three"),
                            maxlength: RichTextModule::TEXT_MAX_LENGTH,
                            ckeditor: { language: I18n.locale, toolbar: 'mini' } %>
        </div>
        <div class="small-12 medium-12 column">
          <%= f.label :promo_link_three, t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_link_three") %>
          <%= f.text_field :promo_link_three, label: false, class: 'promo-module-link-three' %>
