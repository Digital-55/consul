            <%= f.label :disabled, t("admin.custom_pages.custom_page_modules.disabled") %>
          </div>
        </div>
        <div class="small-12 medium-9 column">
          <%= f.label :promo_image_two, t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_image_two") %>
          <%= f.file_field :promo_image_two, label: false, class: 'promo_image_two-module-file' %>
        </div>
        <div class="small-12 medium-3 column">
          <% if f.object.promo_image_two.present? %>
