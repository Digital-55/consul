          <%= f.text_field :promo_link_two, label: false, class: 'custom_page_module-promo_link_two' %>
        </div>
      </div>
      <div class="tabs-panel" id='<%= "#{dom_id(f.object)}_three" %>'>
        <div class="small-12 medium-6 column">
          <%= f.label :promo_location_three, t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_location_three") %>
