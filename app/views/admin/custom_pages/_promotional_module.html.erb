            </div>
            <small>
              <%= f.object.promo_image_two.instance.promo_image_two_file_name %>
            </small>
          <% end %>
        </div>
        <div class="ckeditor small-12 medium-12 column">
          <%= f.cktext_area :promo_description_two,
                            id: "promo_description_two_#{f.object.id}",
                            label: t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_description_two"),
                            maxlength: RichTextModule::TEXT_MAX_LENGTH,
                            ckeditor: { language: I18n.locale, toolbar: 'mini' } %>
        </div>
        <div class="small-12 medium-12 column">
          <%= f.label :promo_link_two, t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_link_two") %>
          <%= f.text_field :promo_link_two, label: false, class: 'promo-module-link-two' %>
        </div>
      </div>
      <div class="tabs-panel" id="promo3">
        <div class="small-12 medium-10 column">
          <%= f.label :promo_title_three, t("admin.custom_pages.custom_page_modules.custom_page_module.promo.promo_title_three") %>
          <%= f.text_field :promo_title_three, label: false, class: 'promo-module-title-three' %>
        </div>
        <div class="check-options">
